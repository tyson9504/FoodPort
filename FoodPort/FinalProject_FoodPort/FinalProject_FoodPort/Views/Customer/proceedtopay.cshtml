@model FinalProject_FoodPort.Models.Summary

@{
    ViewBag.Title = "proceedtopay";
    Layout = "~/Views/Shared/Customerlayout.cshtml";
}
<div align="center">
    <fieldset>
        <legend>Order Summary</legend>

        <table class="table table-hover table-bordered">
            <tr class="success">
                <td style="text-align:center">
                    @Html.DisplayNameFor(model => model.RestaurantName)
                </td>
                <td style="text-align:center">
                    @Html.DisplayFor(model => model.RestaurantName)
                </td>
            </tr>
            <tr>
                <td style="text-align:center">@Html.DisplayNameFor(model => model.TotalItems)</td>
                <td style="text-align:center">@Html.DisplayFor(model => model.TotalItems)</td>
            </tr>
            <tr>
                <td style="text-align:center">@Html.DisplayNameFor(model => model.TotalAmount)</td>
                <td style="text-align:center">@Html.DisplayFor(model => model.TotalAmount)</td>
            </tr>
        </table>
    </fieldset>

    @using (Html.BeginForm("makepayment", "customer", new { resid = ViewBag.id, amt = ViewBag.amt }))
    {
        <input type="submit" value="Make Payment"/>
    }
    </div>