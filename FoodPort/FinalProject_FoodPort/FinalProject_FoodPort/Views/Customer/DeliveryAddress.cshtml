@{
    ViewBag.Title = "DeliveryAddress";
    Layout = "~/Views/Shared/Customerlayout.cshtml";
}

<div style="font-family: Helvetica;background: #7d8491;">
    <div class="col-lg-3"></div>
    <div class="col-lg-6">
        <div class="form-horizontal">
            <div align="center" style="color:red">@ViewBag.error</div>
            <br />
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)
                <fieldset>
                    <legend>
                        <h4 style="align-self: center;">
                            User Log in
                        </h4>
                    </legend>
                    <br>
                    <div class="form-group">
                        <label class="col-md-3 control-label">Enter Address:</label>
                        <div class="col-md-8">
                            <div class="input-group">
                                <span class="input-group-addon"></span>
                                @Html.TextArea("address", "", new { @class = "form-control" ,rows=5,columns=75})
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-2 control-label"></label>
                        <div class="col-md-9">
                            &nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp<button type="submit" class="btn btn-primary">&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbspAdd&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp</button>
                        </div>
                    </div>
                </fieldset>
            }
        </div>
    </div>
    <div class="col-lg-3"></div>
</div>
